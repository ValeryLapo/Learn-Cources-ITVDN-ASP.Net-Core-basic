@model _003.ViewModel.Models.GamesViewModel;

<!doctype html>
<html>
<head>
    <title>Games</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <h1>PC Games</h1>
    @foreach (var game in Model.PCGames)
    {
        <h2>Game: @game.Name</h2>
        <h2>Platform: @game.Language</h2>
        <h2>@(new string('-', 30))</h2>
    }
    <h1>XBox Games</h1>

    @foreach (var game in Model.XBoxGames)
    {
        <h2>Game: @game.Name</h2>
        <h2>Platform: @game.Language</h2>
        <h2>@(new string('-', 30))</h2>
    }
</body>
</html>
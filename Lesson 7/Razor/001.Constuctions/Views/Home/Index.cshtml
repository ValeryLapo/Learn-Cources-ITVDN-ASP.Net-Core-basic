    @*Functions*@
     @functions
    {
        public int GetFactorial(int n)
        {
            int result = 1;
            for (int i = 1; i <= n; i++)
                result *= i;
            return result;
        }
     }
    <div>Factorial of number 10 is: @GetFactorial(4)</div>

    @{
        int variable = 0;
    }
    @switch (variable)
    {
        case 0:
            <p>@variable</p>
            break;
        case 1:
            <p>@(variable + variable)</p>
            break;
		default:
		    <p>@(variable*variable)</p>
		    break;
    }*@

    @*Cycles*@
    @for (var i = 0; i < 5; i++)
   {
       <p>@i</p>
   }
    
    @{
	    int variable2 = 0;
	}

	@while (variable2 <= 10)
	{
		<p>@variable2</p>
		variable2++;
	}

	@{
		int variable3 = 0;
	}

	@do
	{
		<p>@variable3</p>
		variable3++;
	}
	while (variable3 < 10);
	<P>Finished!</P>

